---
// src/components/Header.astro
// Dit component toont de header met logo/titel en navigatie.
// Tijd/Locatie context (Eindhoven, 7 april 2025, 13:47 CEST) ter info.

const navItems = [
  { name: 'Home', href: '/' },
  { name: 'Vaardigheden', href: '/ontdek/' },
  { name: 'Wegwijs in AI', href: '/wegwijs-ai/' },
  { name: 'Richtlijnen', href: '/bronnen/' },
];
---

<header class="bg-white shadow-md sticky top-0 z-50">
  <div class="container mx-auto px-4 py-4 flex justify-between items-center">
    <a href="/" class="flex items-center space-x-3 group">
      <span class="text-2xl font-bold text-blue-600 group-hover:text-purple-700 transition duration-300">
        VO<span class="text-purple-600">-</span>AI Gids
      </span>
      <img src="/images/RGB-SintLucas-Logo-2022-Orange-Zwart.png" alt="SintLucas logo" class="h-8 md:h-10 w-auto" />
    </a>

    <nav class="hidden md:block">
      <ul class="flex space-x-6">
        {navItems.map((item) => (
          <li>
            <a
              href={item.href}
              class="text-gray-600 hover:text-blue-600 hover:underline transition duration-300"
              aria-current={Astro.url.pathname === item.href ? 'page' : false}
            >
              {item.name}
            </a>
          </li>
        ))}
      </ul>
    </nav>

    <div class="md:hidden">
      <button id="mobile-menu-button" class="text-gray-600 hover:text-blue-600 focus:outline-none">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
        </svg>
      </button>
    </div>
  </div>

  <div id="mobile-menu" class="md:hidden hidden bg-white border-t border-gray-200">
    <ul class="flex flex-col py-2">
       {navItems.map((item) => (
        <li>
          <a
            href={item.href}
            class="block px-4 py-2 text-gray-600 hover:bg-gray-100 hover:text-blue-600 transition duration-300"
            aria-current={Astro.url.pathname === item.href ? 'page' : false}
          >
            {item.name}
          </a>
        </li>
      ))}
    </ul>
  </div>

  <script>
    const btn = document.getElementById('mobile-menu-button');
    const menu = document.getElementById('mobile-menu');
    btn.addEventListener('click', () => {
      menu.classList.toggle('hidden');
    });
  </script>
</header>
