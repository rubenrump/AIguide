---
// src/layouts/Layout.astro
// Importeren van (nog te maken) componenten
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

// Props definitie: we verwachten een 'title' van de pagina die deze layout gebruikt
interface Props {
	title: string;
    description?: string; // Optionele beschrijving voor SEO
}

const { title, description = 'Een praktische gids voor creativiteit en AI in het onderwijs.' } = Astro.props;

// Huidige tijd en locatie context (zoals gevraagd)
const currentTime = new Date().toLocaleString('nl-NL', { timeZone: 'Europe/Amsterdam' });
const currentLocation = "Eindhoven, Noord-Brabant, Nederland";

---
<!doctype html>
<html lang="nl">
<script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" defer></script>

<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<link rel="icon" type="image/svg+xml" href="/favicon.svg" /> <meta name="generator" content={Astro.generator} />

    <title>{title}</title>
    <meta name="description" content={description} />

    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <link rel="stylesheet" href="/styles/global.css"> </head>
    <body class="font-sans bg-white text-gray-900 antialiased flex flex-col min-h-screen">
      <Header />
      <main class="flex-grow">
        <slot />
      </main>
      <Footer />
    </body>
    
</html>

