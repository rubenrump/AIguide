---
import BaseLayout from '../../../layouts/Layout.astro';

const skills = [
  {
    title: "Kritisch Denken",
    url: "/ontdek/vaardigheden/kritisch-denken/",
    description: "Leer hoe je AI-output kunt beoordelen en doordachte keuzes maakt."
  },
  {
    title: "Kernvragen Stellen",
  url: "/ontdek/vaardigheden/kernvaardigheden/kernvragen/",
    description: "Ontwikkel de vaardigheid om scherpe, onderzoekende vragen te stellen."
  }
];
---

<BaseLayout title="Kernvaardigheden voor Creativiteit">
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4 max-w-3xl">
      <h1 class="text-4xl font-bold mb-6 text-gray-800">Kernvaardigheden voor Creativiteit</h1>
      <p class="text-gray-700 mb-10">
        Creatieve denkers gebruiken een combinatie van vaardigheden: van kritisch analyseren tot nieuwsgierig vragen stellen.
        Deze pagina bundelt essentiële skills die je helpen navigeren in een wereld mét AI.
      </p>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {skills.map((skill) => (
          <div class="border border-gray-200 rounded-lg p-6 shadow-sm hover:shadow-md transition duration-300">
            <h2 class="text-xl font-semibold mb-2">{skill.title}</h2>
            <p class="text-gray-600 mb-4">{skill.description}</p>
            <a href={skill.url} class="text-blue-600 hover:underline font-semibold">Lees Meer &rarr;</a>
          </div>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>
